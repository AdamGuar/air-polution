<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="brand-heading">Conditions in @ViewBag.City</h1>
                    <p class="intro-text">
                        Temperature:
                        <br>@ViewBag.Temperature &degC
                    </p>
                    <p class="intro-text">
                        Wind:
                        <br>@ViewBag.Wind km/h
                    </p>
                    <p class="intro-text">
                        Air Quality Index:
                        <br>@ViewBag.AirIndex
                    </p>


                    <a href="#about" class="btn btn-circle page-scroll">
                        <i class="fa fa-angle-double-down animated"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- About Section -->
<section id="about" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>Acording to Inspectorate Of Environmental Protection:</h2>
            <p>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Station Name</th>
                            <th scope="col">Station Address</th>
                            <th scope="col">Air Quality Index</th>
                        </tr>
                    </thead>
                    @foreach (var item in ViewBag.Stations)
                    {
                        <tr>    
                            <td>@item.StationName</td>
                            <td>@item.StationAdress</td>
                            <td>@item.StationIndex.StIndexLvl.IndexLvlName</td>
                        </tr>
                    }
                </table>

            </p>
            <p>
                <a href="#contact" class="btn btn-circle page-scroll">
                    <i class="fa fa-angle-double-down animated"></i>
                </a>
            </p>
        </div>
    </div>

</section>
